<div class="page-search-res-wrap"
     data-page-search="true"
     data-doc-id="<%= @document_id %>"
     data-ark-url="<%= @ark_url %>"
     data-term="<%= @term %>"
     data-go-to-page-aria-template="<%= go_to_page_aria_template %>"
     data-prev-hit-label="<%= t('blacklight.page_search.prev_hit') %>"
     data-prev-hit-aria="<%= t('blacklight.page_search.prev_hit_aria') %>"
     data-next-hit-label="<%= t('blacklight.page_search.next_hit') %>"
     data-next-hit-aria="<%= t('blacklight.page_search.next_hit_aria') %>"
     data-show-more-label="<%= t('blacklight.page_search.show_more') %>"
     data-show-less-label="<%= t('blacklight.page_search.show_less', default: '') %>"
     data-no-results-html="<%= j t('blacklight.page_search.no_results_html', term: @term) %>"
     data-matching-html="<%= j t('blacklight.page_search.matching_pages_for_html', term: @term) %>"
     data-ark-path="<%= ark_path %>">
  <div class="page-search-header d-flex align-items-center gap-2 mb-1">
    <span class="matching-image-label" term="<%= @term %>">
      <%= t('blacklight.page_search.matching_pages_for_html', term: @term) %>
    </span>
  </div>

  <div class="page-search-body" data-page-search-body>
    <div class="text-muted small">
      <%= t('blacklight.page_search.loading', default: 'Loading page hits...') %>
    </div>
  </div>
</div>
